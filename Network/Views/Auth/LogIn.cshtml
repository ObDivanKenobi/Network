@model Network.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h2>Войти</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label>Имя пользователя/Email</label>
        @Html.TextBoxFor(x => x.EmailOrUsername, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Пароль</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    <button class="btn btn-success" type="submit">Войти</button><span> или </span>@Html.ActionLink("Зарегистрироваться", "Register", "Auth", new { returnUrl = Request.Url.AbsoluteUri }, new { @class = "btn btn-primary" })
}