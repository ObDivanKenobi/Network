<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <style>
        /*Убирает "прыжки" страницы при появлении скролла*/
        html {
            width: 100vw;
            overflow-x: hidden;
        }

        h1 {
            margin:auto;
        }

        header {
            height: 100px;
        }

            header > div[class*='col-'] {
                height: 100%;
            }

        .wrap {
            position: relative;
            width: 100%;
            height: 100%;
        }

        .col-md-3 > .wrap > div {
            text-align: left;
            position: absolute;
            top: 50%;
            left: 5%;
            -webkit-transform: translateY(-50%);
            transform: translateY(-50%);
        }

        .col-md-4 > .wrap > div {
            position: absolute;
            text-align: right;
            top: 50%;
            right: 5%;
            -webkit-transform: translateY(-50%);
            transform: translateY(-50%);
        }

        hr {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .flex-valign-center {
            display: flex;
            align-items: center;
        }

        .login-logout-button {
            margin: auto;
            margin-right: 0px;
        }

        .content, .content > div[class*='col-'] {
            display: -webkit-box;
            display: -moz-box;
            display: -ms-flexbox;
            display: -webkit-flex;
            display: flex;
            flex: 1 0 auto;
        }

        #page-content {
            min-height: 100%;
        }
    </style>
</head>
<body class="container">
    <header class="row-fluid">
        <div class="col-md-3 col-sm-3">
            <div class="wrap">
                <div>
                    <h1>ВРаботе</h1>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-sm-5">&nbsp;</div>
        <div class="col-md-4 col-sm-4">
            <div class="wrap">
                <div>
                    @if (Request.IsAuthenticated)
                    {
                        <span>Добро пожаловать, </span>@User.Identity.Name<span>&nbsp;&nbsp;&nbsp;</span> @Html.ActionLink("Выйти", "LogOut", "Auth", new { returnUrl = Request.Url }, new { @class = "btn btn-warning" })
                    }
                    else
                    {
                        @Html.ActionLink("Войти", "LogIn", "Auth", new { returnUrl = "/" }, new { @class = "btn btn-sm btn-success" })<span> или </span>@Html.ActionLink("Зарегистрироваться", "Register", "Auth", new { returnUrl = "/" }, new { @class = "btn btn-sm btn-primary" })
                    }
                </div>
            </div>
        </div>
    </header>
    <div class="row-fluid content">
        <div class="col-md-2 col-sm-4" id="navigation">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="#">Моя страница</a></li>
                <li><a href="#">Коллеги</a></li>
                <li><a href="#">Диалоги</a></li>
                <li><hr /></li>
                <li><a href="#">Поиск коллег</a></li>
                <li><a href="#">Поиск статей</a></li>
            </ul>
        </div>
        <div class="col-md-10 col-sm-6" id="page-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
